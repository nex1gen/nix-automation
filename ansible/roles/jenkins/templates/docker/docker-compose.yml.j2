---

services:
  jenkins:
    image: {{ jenkins_docker_registry }}/{{ jenkins_image_repo }}:{{ jenkins_image_tag }}
    container_name: jenkins
    volumes:
      - {{ jenkins_data_dir }}/jenkins_home:/var/jenkins_home
    healthcheck:
      test: ["CMD-SHELL", "curl -fsS http://127.0.0.1:8080/login > /dev/null || exit 1"]
      interval: 30s
      timeout: 5s
      retries: 10
      start_period: 30s
    restart: unless-stopped

  nginx:
    image: {{ jenkins_docker_registry }}/{{ jenkins_nginx_image_repo }}:{{ jenkins_nginx_image_tag }}
    container_name: nginx
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - {{ jenkins_data_dir }}/nginx/conf.d:/etc/nginx/conf.d
      - {{ jenkins_data_dir }}/nginx/certs:/etc/nginx/certs
      - {{ jenkins_data_dir }}/nginx/www:/var/www/certbot
    healthcheck:
      test: ["CMD-SHELL", "curl -fsS http://127.0.0.1/health > /dev/null || exit 1"]
      interval: 30s
      timeout: 5s
      retries: 10
    restart: unless-stopped
    depends_on:
      jenkins:
        condition: service_healthy
